<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>
        <%= (locals.title_nav) ? title_nav: 'Octagram' %>
    </title>
    <!-- Favicon -->
    <link href="/favicon" rel="icon">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/creator/index.css">
    <link rel="stylesheet" href="/css/creator/navbar.css">
    <link rel="stylesheet" href="/css/creator/member.css">
    <link rel="stylesheet" href="/css/creator/package.css">
    <link rel="stylesheet" href="/css/creator/setting.css">
    <link rel="stylesheet" href="/css/creator/new_creator.css">
    <link rel="stylesheet" href="/css/creator/post.css">
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <!-- Font awesome -->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!-- Text Editor -->
    <script src="https://cdn.tiny.cloud/1/tm45ih6ayn2iq51b3tcaftd0r1lne5iz3ouzo1zun3rc3xuw/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>

        tinymce.init({
            selector: '#textEditor',
            plugins: 'advlist autolink lists link image charmap print preview anchor paste tiny_mce_wiris',
            toolbar_mode: 'floating',
            height: 300,
            toolbar: 'undo redo | formatselect | bold italic | bullist numlist | link',
            paste_as_text: true,
        });
    </script>
</head>

<body>
    <div class="container">
        <%- include('./post.ejs')%>
        <%- include('./popup.ejs')%>
        <%- include('./navbar.ejs')%>
            <main>
                <%- include('./sidebar.ejs')%>
                    <%- body %>
            </main>
    </div>
</body>

<script src="https://kit.fontawesome.com/4419eadbc1.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="/js/creator_script.js"></script>

</html>